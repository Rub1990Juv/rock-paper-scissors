<p id="result"></p>

<script>
  let secret = Math.floor(Math.random() * 10) + 1;

  function check() {
    let user = document.getElementById("guess").value;
    let result = document.getElementById("result");

    if (user == "") {
      result.textContent = "Write number ğŸ™‚";
      return;
    }

    if (+user === secret) {
      result.textContent = "ğŸ‰ True, you win";
    } else {
      result.textContent = "âŒ Wrong. True number is " + secret ;
    }
  }
</script>

